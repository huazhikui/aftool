{
  "compilerOptions": {
    "outDir": "dist",
    "noImplicitAny": true,
    "module": "commonjs",
    "sourceMap": true,
    "target": "esnext",
    "allowJs": false,
    "baseUrl": ".",
    "declaration": true,
    "declarationDir": "types",
    "typeRoots": ["global_types"],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "jest.config.js",
    "**/*.spec.ts"
  ]
}
